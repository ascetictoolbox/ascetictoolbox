<?xml version="1.0" encoding="UTF-8"?>
<Envelope xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:vssd="http://schemas.dmtf.org/wbem/wscim/1/cim-schema/2/CIM_VirtualSystemSettingData"
    xmlns:rasd="http://schemas.dmtf.org/wbem/wscim/1/cim-schema/2/CIM_ResourceAllocationSettingData"
    xmlns:ovf="http://schemas.dmtf.org/ovf/envelope/1"
    xmlns="http://schemas.dmtf.org/ovf/envelope/1"
    xsi:schemaLocation="http://schemas.dmtf.org/ovf/envelope/1 ../dsp8023.xsd">
    	
	#set($fileIdImage = "${virtualMachineId}-img-file")
	#set($fileIdContext = "${virtualMachineId}-context-file")
	
	<!-- References to all external files -->
	<ovf:References>
	    <!-- VM Image -->
	    <ovf:File ovf:href="${vmImageFile}"
	              ovf:id="${fileIdImage}"/>
	    <!-- Context Image(s) -->
	    <ovf:File ovf:href="${contextualizationImageFile}"
	              ovf:id="${fileIdContext}"/>
	</ovf:References>
	
	<!-- Describes meta-information about all virtual disks in the package. -->
	<ovf:DiskSection>
	    <ovf:Info>List of the virtual disks used in the package.</ovf:Info>
	    <ovf:Disk ovf:capacity="${vmImageCapacity}" ovf:diskId="${virtualMachineId}-img-disk"
	              ovf:fileRef="${fileIdImage}"
	              ovf:format="${vmImageFormat}"/>
	    <ovf:Disk ovf:capacity="${contextualizationImageCapacity}"
	              ovf:diskId="${virtualMachineId}-context-disk"
	              ovf:fileRef="${fileIdContext}"
	              ovf:format="${contextualizationImageFormat}"/>
	</ovf:DiskSection>
	
	<!-- Describes all networks used in the package -->
	<ovf:NetworkSection>
	    <ovf:Info>Logical networks used in the package.</ovf:Info>
	    <ovf:Network ovf:name="${virtualMachineId}-net">
	        <ovf:Description>Network to connect to system-${virtualMachineId}.</ovf:Description>
	    </ovf:Network>
	</ovf:NetworkSection>
	
	<ovf:VirtualSystemCollection ovf:id="${applicationId}">
	    <ovf:Name>Full name of ${applicationId}</ovf:Name>
	    <ovf:Info>${applicationId} description.</ovf:Info>

		<!-- Product specific attributes applicable to all VirtualSystems (VMs) -->
		<ovf:ProductSection ovf:class="eu.ascetic.application">
			<ovf:Info>Product customisation for the installed software.</ovf:Info>
		    <ovf:Product></ovf:Product>
		    <ovf:Version></ovf:Version>
		</ovf:ProductSection>
		
		<!-- Virtual System Instances Template -->
		<ovf:VirtualSystem ovf:id="${virtualMachineId}">
			<ovf:Name>Full name of ${virtualMachineId}</ovf:Name>
		    <ovf:Info>${virtualMachineId} description</ovf:Info>
		    
		    <!-- Product specific attributes applicable to a single Virtual System (VM) -->
		    <ovf:ProductSection ovf:class="eu.ascetic.vm">
		        <ovf:Info>Product customisation for the installed software</ovf:Info>
		        <ovf:Product></ovf:Product>
		        <ovf:Version></ovf:Version>
		    </ovf:ProductSection>
		    
		    <!-- Operating System details -->
		    <ovf:OperatingSystemSection ovf:id="${operatingSystemId}">
		        <ovf:Info>Specifies the operating system installed</ovf:Info>
		        <ovf:Description>${operatingSystemDescription}</ovf:Description>
		    </ovf:OperatingSystemSection>
		    
		    <!-- Hardware specification of the Virtual System (VM) -->
		    <ovf:VirtualHardwareSection>
		        <ovf:Info>Virtual Hardware Requirements: ${memorySize}Mb, ${numberOfVirtualCPUs}CPU,
		            2 disks, 1 nic
		        </ovf:Info>
		        <ovf:System>
		            <vssd:ElementName>Virtual Hardware Family</vssd:ElementName>
		            <vssd:InstanceID>0</vssd:InstanceID>
		            <vssd:VirtualSystemType>${virtualHardwareFamily}</vssd:VirtualSystemType>
		        </ovf:System>
		        <ovf:Item>
		            <rasd:Description>Number of virtual CPUs</rasd:Description>
		            <rasd:ElementName>${numberOfVirtualCPUs} virtual CPU</rasd:ElementName>
		            <rasd:InstanceID>1</rasd:InstanceID>
		            <rasd:ResourceType>3</rasd:ResourceType>
		            <rasd:VirtualQuantity>${numberOfVirtualCPUs}</rasd:VirtualQuantity>
		        </ovf:Item>
		        <ovf:Item>
		            <rasd:AllocationUnits>MegaBytes</rasd:AllocationUnits>
		            <rasd:Description>Memory Size</rasd:Description>
		            <rasd:ElementName>${memorySize} MB of memory</rasd:ElementName>
		            <rasd:InstanceID>2</rasd:InstanceID>
		            <rasd:ResourceType>4</rasd:ResourceType>
		            <rasd:VirtualQuantity>${memorySize}</rasd:VirtualQuantity>
		        </ovf:Item>
		        <ovf:Item>
		            <rasd:AllocationUnits>MHz</rasd:AllocationUnits>
		            <rasd:ElementName>MHz reservation</rasd:ElementName>
		            <rasd:InstanceID>1</rasd:InstanceID>
		            <rasd:Reservation>${cpuSpeed}</rasd:Reservation>
		            <rasd:ResourceType>3</rasd:ResourceType>
		        </ovf:Item>
		        <ovf:Item>
		            <rasd:AutomaticAllocation>true</rasd:AutomaticAllocation>
		            <rasd:Connection>${virtualMachineId}-net</rasd:Connection>
		            <rasd:ElementName>Ethernet adapter on ${virtualMachineId}-net network
		            </rasd:ElementName>
		            <rasd:InstanceID>3</rasd:InstanceID>
		            <rasd:ResourceType>10</rasd:ResourceType>
		        </ovf:Item>
		        <ovf:Item>
		            <rasd:ElementName>Harddisk 1</rasd:ElementName>
		            <rasd:HostResource>ovf:/disk/${virtualMachineId}-img-disk</rasd:HostResource>
		            <rasd:InstanceID>4</rasd:InstanceID>
		            <rasd:Parent>4</rasd:Parent>
		            <rasd:ResourceType>17</rasd:ResourceType>
		        </ovf:Item>
		        <ovf:Item>
		            <rasd:ElementName>Harddisk 2</rasd:ElementName>
		            <rasd:HostResource>ovf:/disk/${virtualMachineId}-context-disk</rasd:HostResource>
		            <rasd:InstanceID>4</rasd:InstanceID>
		            <rasd:Parent>4</rasd:Parent>
		            <rasd:ResourceType>17</rasd:ResourceType>
		        </ovf:Item>
		    </ovf:VirtualHardwareSection>
		</ovf:VirtualSystem>
	</ovf:VirtualSystemCollection>
</Envelope>