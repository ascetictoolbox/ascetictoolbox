<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="
    	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    	http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.5.xsd
    	">

	<util:map id="Scopes" map-class="java.util.HashMap">
		<entry key="duration-estimation-deployment">
			<ref bean="Scope.deployment.all"/>
		</entry>
		<entry key="energy-consumption-deployment">
			<ref bean="Scope.deployment.single"/>
		</entry>
		<entry key="cost-estimation-deployment">
			<ref bean="Scope.deployment.all"/>
		</entry>
		<entry key="energy-consumption-event">
			<ref bean="Scope.event"/>
		</entry>
		<entry key="duration-estimation-event">
			<ref bean="Scope.event"/>
		</entry>
		<entry key="cost-estimation-event">
			<ref bean="Scope.event"/>
		</entry>
	</util:map>
	
	<bean id="Scope.event" class="eu.ascetic.saas.experimentmanager.models.EventScope" />
	<bean id="Scope.deployment.all" class="eu.ascetic.saas.experimentmanager.models.DeploymentScope" />
	
	<bean id="Scope.deployment.single" class="eu.ascetic.saas.experimentmanager.models.ExplicitScope">
		<property name="scopes" >
			<list>
				<bean class="eu.ascetic.saas.experimentmanager.models.Scope">
					<property name="name" value="deployment"/>
					<property name="description" value="Scope corresponding to the whole deployment"/>
					<property name="scopableItems">
						<list>
							<bean class="eu.ascetic.saas.experimentmanager.models.ScopableItem">
								<property name="location">
									<util:map map-class="java.util.HashMap">
										<entry key="appId" value="newsAsset" />
										<entry key="deplId" value="490" />
									</util:map>
								</property>
							</bean>
						</list>
					</property>
					<property name="category" value="deployment"/>
				</bean>
			</list>
		</property>
	</bean>
	
	
</beans>