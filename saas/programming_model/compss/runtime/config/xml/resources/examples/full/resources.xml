                <SubmissionSystem>
                    <Batch>
                        <Queue>sequential</Queue>
                        <Queue>training</Queue>
                    </Batch>
                    <Interactive/>
                </SubmissionSystem>
                <User>user</User>
                <Properties>
                    <Property>
                        <Name>P1</Name>
                        <Value>V1</Value>
                    </Property>
                    <Property>
                        <Name>P2</Name>
                        <Value>V2</Value>
                    </Property>
                </Properties>
            </Adaptor>
        </Adaptors>
        <Storage>
            <Size>2000.0</Size>
        </Storage>
        <SharedDisks>
            <AttachedDisk Name="DiskFull">
                <MountPoint>/tmp/SharedDisk/</MountPoint>
            </AttachedDisk>
