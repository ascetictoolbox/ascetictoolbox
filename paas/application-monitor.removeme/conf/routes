# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET         /gui                                     api.Misc.redirectTo(url="/gui/")
GET         /gui/                                    controllers.Assets.at(path="/public", file="index.html")
GET         /gui/*file                               controllers.Assets.at(path="/public", file)

#List running apps
GET         /apps                                    api.Apps.listApps(start:Long?=-1,end:Long?=-1)
GET         /apps/                                   api.Apps.listApps(start:Long?=-1,end:Long?=-1)

POST        /event                                   api.Events.post()
PATCH       /event                                   api.Events.update()
GET         /event/:id                               api.Events.get(id:String)
PATCH       /event/:id                               api.Events.finish(id:String)

#PUT         /query                                   controllers.QueriesController


# Navigation through metrics (Ajax helper services)
GET         /metrics/nav                             api.Metrics.getNavigationPath()
GET         /metrics/nav/                            api.Metrics.getNavigationPath()
GET         /metrics/nav/:appId                      api.Metrics.getNavigationPathA(appId:String)
GET         /metrics/nav/:appId/                     api.Metrics.getNavigationPathA(appId:String)
GET         /metrics/nav/:appId/:nodeId              api.Metrics.getNavigationPathAN(appId:String,nodeId:String)
GET         /metrics/nav/:appId/:nodeId/             api.Metrics.getNavigationPathAN(appId:String,nodeId:String)
GET         /metrics/nav/:appId/:nodeId/*path        api.Metrics.getNavigationPathANP(appId:String,nodeId:String,path:String)

#Get consolidated metrics for an application/node
GET         /metrics/:oper/:appId/:nodeId            api.Metrics.getAllMetricsHistory(oper:String,appId:String,nodeId:String,start:Long ?=-1,end:Long?=-1,resolution:Long?=-1)