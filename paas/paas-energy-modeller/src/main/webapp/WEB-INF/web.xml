<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Ascetic Energy Modeller REST Server</display-name>
 
	<servlet>
		<servlet-name>ascetic-serlvet</servlet-name>
		<servlet-class>
                     com.sun.jersey.spi.container.servlet.ServletContainer
        </servlet-class>
		<init-param>
		     <param-name>com.sun.jersey.config.property.packages</param-name>
		     <param-value>eu.ascetic.asceticarchitecture.paas.energymodeller.server</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
 
	<servlet-mapping>
		<servlet-name>ascetic-serlvet</servlet-name>
		<url-pattern>/ascetic/*</url-pattern>
	</servlet-mapping>
</web-app>
