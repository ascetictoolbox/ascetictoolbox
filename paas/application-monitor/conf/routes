# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET     /gui                                     api.Misc.redirectTo(url="/gui/")
GET     /gui/                                    controllers.Assets.at(path="/public", file="index.html")
GET     /gui/metricPanel                         api.Gui.getAllMetricPanels()
POST    /gui/metricPanel                         api.Gui.addMetricPanel()
DELETE  /gui/metricPanel/:id                     api.Gui.deleteMetricPanel(id:String)
GET     /gui/*file                               controllers.Assets.at(path="/public", file)


#List running apps
GET     /apps                                    api.Apps.listApps(start:Long?=0,end:Long?=0)
GET     /apps/                                   api.Apps.listApps(start:Long?=0,end:Long?=0)

GET     /instances                               api.Apps.listInstances(start:Long?=0,end:Long?=0)
GET     /instances/                              api.Apps.listInstances(start:Long?=0,end:Long?=0)

POST    /event                                   api.Events.post()
PATCH   /event                                   api.Events.update()
GET     /event/:id                               api.Events.get(id:String)
PATCH   /event/:id                               api.Events.finish(id:String)

POST    /query                                   api.Queries.post()

#Get consolidated metrics for an application/node
GET     /metrics/:oper/:appId/:nodeId            api.Metrics.getAllMetricsHistory(oper:String,appId:String,nodeId:String,start:Long ?=-1,end:Long?=-1,resolution:Long?=-1)

GET     /status                                  api.Status.getStatus()
GET     /status/meta                             api.Status.getMeta()


