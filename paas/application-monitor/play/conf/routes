# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

#List running apps
GET     /apps                       controllers.EventsController.listApps(start:Long?=-1,end:Long?=-1)
POST    /event/:appId/:nodeId       controllers.EventsController.postEvent(appId:String,nodeId:String)
GET     /event/:appId               controllers.EventsController.getLastEventForApp(appId:String)
GET     /event/:appId/:nodeId       controllers.EventsController.getLastEvent(appId:String,nodeId:String)
GET     /metrics/:oper/:appId/:nodeId    controllers.MetricsController.getAllMetricsHistory(oper:String,appId:String,nodeId:String,start:Long?=-1,end:Long?=-1,resolution:Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
